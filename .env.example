# Database Configuration
DATABASE_URL=postgresql://sagebase_user:sagebase_password@localhost:5432/sagebase_db

# Cloud SQL Configuration (for production/cloud deployment)
# When using Cloud SQL Proxy, the connection uses Unix socket by default
# Connection name format: PROJECT_ID:REGION:INSTANCE_NAME
CLOUD_SQL_CONNECTION_NAME=  # Example: my-project:asia-northeast1:sagebase-db
USE_CLOUD_SQL_PROXY=false  # Set to true to enable Cloud SQL Proxy connection
CLOUD_SQL_UNIX_SOCKET_DIR=/cloudsql  # Directory where Cloud SQL Proxy creates Unix sockets
# Override DATABASE_URL for Cloud SQL (optional, auto-detected if not set)
# DATABASE_URL_CLOUD=postgresql://sagebase_user:password@/sagebase_db?host=/cloudsql/PROJECT:REGION:INSTANCE

# API Keys
GOOGLE_API_KEY=your-google-api-key-here

# LangChain Configuration (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=
LANGCHAIN_PROJECT=
LANGCHAIN_API_KEY=

# OpenAI Configuration (Optional)
OPENAI_API_KEY=

# Application Settings
DEFAULT_PDF_PATH=data/minutes.pdf
OUTPUT_DIR=data/output
LLM_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.0

# Environment
ENVIRONMENT=development
DEBUG=false

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=sagebase-scraped-minutes
GCS_PROJECT_ID=  # Optional: Uses default project if not set
GCS_UPLOAD_ENABLED=false  # Set to true to enable automatic GCS uploads

# Timeout Settings (in seconds)
WEB_SCRAPER_TIMEOUT=60  # Timeout for web page loading
PDF_DOWNLOAD_TIMEOUT=120  # Timeout for PDF downloads
PAGE_LOAD_TIMEOUT=30  # Timeout for page load state
SELECTOR_WAIT_TIMEOUT=10  # Timeout for waiting for selectors

# Sentry Error Tracking Configuration
SENTRY_DSN=  # Your Sentry DSN (leave empty to disable)
SENTRY_TRACES_SAMPLE_RATE=0.1  # Performance monitoring sample rate (0.0-1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1  # Profiling sample rate (0.0-1.0)
SENTRY_RELEASE=sagebase@0.1.0  # Release version for tracking

# Google OAuth Configuration for Streamlit Authentication
GOOGLE_OAUTH_CLIENT_ID=  # Your Google OAuth 2.0 Client ID (from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_SECRET=  # Your Google OAuth 2.0 Client Secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8501/  # Redirect URI (must match Google Cloud Console)
GOOGLE_OAUTH_ALLOWED_EMAILS=  # Comma-separated list of allowed email addresses (leave empty to allow all)
GOOGLE_OAUTH_DISABLED=false  # Set to true to disable authentication (development only)

# Google Analytics Configuration
GOOGLE_ANALYTICS_ID=  # Your Google Analytics 4 Measurement ID (e.g., G-XXXXXXXXXX, leave empty to disable tracking)

